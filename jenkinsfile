pipeline {
    agent any

    stages {
        stage('package') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy'){
        	steps{
        		sh 'cp /home/ubuntu/.jenkins/workspace/InventoryTracker/target/inventorytracker.war /home/ubuntu/apache-tomcat-8.5.60/webapps'
        		sh 'sh /home/ubuntu/apache-tomcat-8.5.60/bin/catalina.sh stop'
        		sh 'sh /home/ubuntu/apache-tomcat-8.5.60/bin/catalina.sh run'
        	}
        }
    }
}